<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4DB6AC</item>
        <item name="colorPrimaryDark">#FF9800</item>
        <item name="colorAccent">#880E4F</item>
    </style>

    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        style="text-decoration: underline;"
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#3F51B5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="QuestionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#C51162</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Question1Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="QuestionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Check_Box">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
